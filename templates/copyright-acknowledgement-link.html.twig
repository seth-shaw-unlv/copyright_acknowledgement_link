<div id="download-modal-link">{% block modal_link %}{{ label }}{% endblock %}</div>
<div id='copyright-acknowledgement'>
  <div id='copyright-acknowledgement-text' class='modal-content'>
    <span id="copyright-acknowledgement-close-button" class="close">&times;</span>
    {% block agreement %}
    <h3>Copyright &amp; Fair-use Agreement</h3>
