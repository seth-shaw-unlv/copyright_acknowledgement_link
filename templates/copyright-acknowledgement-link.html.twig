  {% endblock %}
  {% block form %}
  <form id="copyright-acknowledgement-form" method="get" action="{{ url }}" target="_blank">
    {% if checkbox %}
    <input name="copyright-acknowledgement" type="checkbox" value="agreed" required>
    <label for="copyright-acknowledgement">I agree</label>
    {% endif %}
    <button type="submit">Download</button>
  </form>
  {% endblock %}
  </div>
</div>
